<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
	<package name="whu.don.learnSSH" extends="struts-default">
		<action name="Login" class="whu.don.action.LoginAction">
			<result name="success">/welcome.jsp</result>
			<result name="fail">/indexagain.jsp</result>
		</action>
		
		<action name="Register" class="whu.don.action.RegisterAction">
			<result name="regsuccess">/index.jsp</result>
			<result name="regfail">/register.jsp</result>
		</action>
		
		<action name="ViewAll" class="whu.don.action.ViewAllAction">
			<result name="success">/allcustomers.jsp</result>
		</action>
	</package>
</struts>